{{#extends "base"}}

  {{#block "content"}}
    <form method="POST">
      <div>
        <label class="form-label">Full Name</label>
        <input type="text" class="form-control" name="fullname" />
      </div>

      <div class="">
        <label for="" class="form-label">Meal</label>
        <input type="radio" value="breakfast" name="meal" />
        <label for="" class="form-label">Breakfast</label>
        <input type="radio" value="lunch" name="meal" />
        <label for="" class="form-label">Lunch</label>
        <input type="radio" value="dinner" name="meal" />
        <label for="" class="form-label">Dinner</label>
      </div>

      <div class="">
        <label for="" class="form-label">Tags</label>
        <input type="checkbox" value="vegan" name="tags" /><label
          for=""
        >Vegan</label>
        <input type="checkbox" value="dairy-free" name="tags" /><label
          for=""
        >Dairy Free</label>
        <input type="checkbox" value="gluten-free" name="tags" /><label
          for=""
        >Gluten Free</label>
        <input type="checkbox" value="homecooked" name="tags" /><label
          for=""
        >Homecooked</label>
      </div>

      <div class="">
        <label for="" class="form-label">Cuisine</label>
        <select class="form-control" name="cuisine" id="">
          <option value="chinese">Chinese</option>
          <option value="malay">Malay</option>
          <option value="indian">Indian</option>
          <option value="others">Others</option>
        </select>
      </div>

      <div class="">
        <label for="" class="form-label">Ingredients</label>
        <select name="ingredients" id="" class="form-control" multiple>
          <option value="chicken">Chicken</option>
          <option value="duck">Duck</option>
          <option value="fish">Fish</option>
          <option value="rice">Rice</option>
        </select>
      </div>
      <input type="submit" value="Submit" class="btn btn-primary my-3" />
    </form>
  {{/block}}

{{/extends}}