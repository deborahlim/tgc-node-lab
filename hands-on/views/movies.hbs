{{#extends "base"}}

  {{#block "content"}}
    <h1>Movies</h1>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Plot</th>
        </tr>
      </thead>
      <tbody>
        {{#each movies}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.plot}}</td>
            <td>
              <a
                href="/movie/{{this.id}}/update"
                class="btn btn-success btn-sm"
              >Edit</a>
              <a href="/movie/{{this.id}}/delete" class="btn">Delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{/block}}

{{/extends}}